<div class="container">
   
    {{#if message}}
        <div class="alert alert-{{status}}">
            {{message}}
        </div>
    {{/if}}
    <table class="table table-bordered table-hover">
    <thead class="table-light">
        <tr>
            <th>Vardas</th>
            <th>El., paštas</th>
            <th>Slaptažodis</th>
            {{!-- <th>Koreguoti</th> --}}
            <th>Trinti</th>
        </tr>
    </thead>
    <tbody>
        {{#each users}}
        <tr>
            <td>{{this.name}}</td>
            <td>{{this.email}}</td>
            <td>{{this.password}}</td>
            {{!-- <td><button>Koreguoti</button></td> --}}
            <td><a href="/delete/{{@key}}" class="btn btn-outline-danger">Trinti</a></td>
        </tr>
        {{/each}}
    </tbody>
</table>
</div>
